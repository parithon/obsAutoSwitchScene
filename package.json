{
	"name": "vscode-obs-websockets-secretsswitchscene",
	"displayName": "vscode-obs-websockets-secretsswitchscene",
	"description": "",
	"publisher": "parithon",
	"license": "SEE LICENSE",
	"version": "1.2.0",
	"homepage": "https://github.com/parithon/vscode-obs-websockets-secretsswitchscene/README.md",
	"bugs": {
		"email": "parithon@outlook.com",
		"url": "https://github.com/parithon/vscode-obs-websockets-secretsswitchscene/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/parithon/vscode-obs-websockets-secretsswitchscene.git"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "obs.secretsSwitchScene.startConnection",
				"title": "Start connection to OBS-Studio"
			},
			{
				"command": "obs.secretsSwitchScene.stopConnection",
				"title": "Stop connection with OBS-Studio"
			},
			{
				"command": "obs.secretsSwitchScene.addFileToSecrets",
				"title": "Add as a Secrets File"
			}
		],
		"configuration": {
			"title": "OBS Secrets Switch Scene",
			"properties": {
				"obs.secretsSwitchScene.socketsUrl": {
					"type": "string",
					"default": "localhost:4444",
					"description": "The OBS Websocket URL and Port. (localhost:4444)"
				},
				"obs.secretsSwitchScene.fileNames": {
					"type": "array",
					"default": [],
					"description": "A list of filenames that contain secrets."
				},
				"obs.secretsSwitchScene.scene": {
					"type": "string",
					"default": "Scene1",
					"description": "The scene to automatically switch to if a file containing secrets is opened."
				},
				"obs.secretsSwitchScene.autoSwitchBack": {
					"type": "boolean",
					"default": true,
					"description": "Automatically switch back to the previous scene after you close the file containing secrets."
				},
				"obs.secretsSwitchScene.password": {
					"type": "string",
					"default": null,
					"description": "The password to use while connecting to the OBS Websocket server."
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"when": "resourceScheme == file",
					"command": "obs.secretsSwitchScene.addFileToSecrets"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"obs-websocket-js-types": "^4.4.0",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.25"
	},
	"dependencies": {
		"obs-websocket-js": "^1.2.0"
	}
}
